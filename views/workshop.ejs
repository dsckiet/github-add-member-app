<% include partials/header %>

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div style="background: #fff; ">
                    <h2 class="text-center" style="font-weight: 700; margin-top: 16px; margin-bottom: 16px; padding: auto 32px;">
                        Workshop on Android Development
                    </h2>
                    <img src="/assets/images/android.png" width="100%" alt="">
                    <p style="font-weight: 600; margin-top: 8px; color: crimson; margin-bottom: 10px;" class="text-center">limited seats available</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div>
                    <h6 class="text-center" style="font-weight: 700; margin-top: 16px; margin-bottom: 0;">
                        <img class="logo-image" src="/assets/images/logo.png" alt="dsc-logo">
                        Developer Student Clubs KIET
                    </h6>
                    <p class="text-center" style="font-size: 12px; font-weight: 500;">powered by</p>
                    <img src="/assets/images/gd.png" width="100%" style="background: #333; padding: 8px 36px;" alt="google-developers">
                    <% if(message) { %>
                        <% if(message == 'already registered' || message == 'try again' || message == 'invalid details') { %>
                        <div class="text-center alert alert-danger"><%=message%>%></div>
                        <% } else { %>
                        <div class="text-center alert alert-success"><%=message%>%></div>
                        <% } %>
                    <% } %>
                    <form action="/workshop/" method="post" class="text-center">
                        <div>
                            <input type="text" name="name" placeholder="full name" required>
                        </div>
                        <div>
                            <input type="text" name="email" placeholder="email" required>
                        </div>

                        <div>
                            <input type="text" name="github" placeholder="github (goelaakash79)" required>
                        </div>

                        <div>
                            <input type="text" name="rollno" placeholder="roll no(1602910001)" required>
                        </div>

                        <div>
                            <input type="text" name="workshop" placeholder="android development" value="android development" disabled required>
                        </div>

                        <div>
                            <label for="year">Year: </label>
                            <select name="year" placeholder="year" required>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>

                            <label style="margin-left: 16px;" for="branch">Branch: </label>
                            <select name="branch" placeholder="branch" required>
                                <option value="ce">CE</option>
                                <option value="cs">CS</option>
                                <option value="ei">EI</option>
                                <option value="en">EN</option>
                                <option value="ec">EC</option>
                                <option value="it">IT</option>
                                <option value="me">ME</option>
                            </select>
                        </div>

                        <div>
                            <button class="btn btn-dark">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/footer %>